<% if flash[:notice].present? %>
  <div class='alert alert-info'>
    <%= flash[:notice] %>
  </div>
<% end %>

<div class='row'>
  <div class='col-sm-10 offset-sm-1'>
    <div class='card'>
      <div class='card-header'>
        Devices
        <div class='float-right'>
          <%= link_to(new_device_path, class: 'btn btn-primary btn-sm') do %>
            <%= octicon 'plus', fill: 'white' %> Device
          <% end %>
        </div>
      </div>
      <div class='card-body'>
        <table class='table table-striped table-sm table-bordered'>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>UUID</th>
              <th>Last seen at</th>
              <th>Events</th>
              <th width='14%'>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
              <tr>
                <td><%= device.id %></td>
                <td><%= device.name %></td>
                <td><%= device.uuid %></td>
                <td><%= device.last_seen_at %></td>
                <td><%= link_to(device.events.count, device_events_path(device)) %></td>
                <td>
                  <%= link_to(edit_device_path(device), class: 'btn btn-sm btn-secondary') do %>
                    <%= octicon 'pencil', fill: 'white' %> Edit
                  <% end %>
                  <%= link_to(device_path(device), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger') do %>
                    <%= octicon 'trashcan', fill: 'white' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
