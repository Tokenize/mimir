<div class='flex flex-row-reverse px-4 py-3'>
</div>

<div class='flex flex-col'>
  <% @devices.each do |device| %>
    <div class='md:mx-auto mb-4 sm:flex'>
      <div class='sm:min-w-lg p-4 bg-gray-100 shadow-md rounded'>
        <div class='flex justify-between border-b-2 border-black'>
          <p class='font-semibold text-sm'><%= device.name %>
          <p class='font-thin text-xs'><%= device_last_seen(device) %></p>
        </div>
        <div class='pt-4'>
          <div class='flex justify-between'>
            <p class='md:w-64 font-semibold text-sm'>UUID</p>
            <p class='md:w-64 font-thin text-xs'><%= device.uuid %></p>
          </div>
        </div>
        <div>
          <div class='flex justify-between border-b-2 border-black'>
            <p class='font-semibold text-sm'>Auth Token</p>
            <p class='font-thin text-xs'><%= device.user.auth_token %></p>
          </div>
        </div>
        <div class='pt-4'>
          <div class='pb-1 flex justify-between'>
            <p class='text-sm font-semibold'>Newest events</p>
            <p class='font-thin text-xs'><%= pluralize(device.events.count, "total event") %></p>
          </div>
          <ul class='w-full whitespace-no-wrap overflow-auto'>
            <% newest_events_for_device(device).each do |event| %>
              <li class='sm:flex sm:justify-between'>
                <span class='text-xs font-hairline sm:mr-4'><%= event.description %></span>
                <span class='text-xs font-hairline'><%= event.timestamp %></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class='pt-2 ml-2 mr-2 sm:p-0 flex sm:flex-col justify-between'>
        <div>
          <%= link_to('+ Device', new_device_path, class: 'inline-block sm:block p-1 mb-2 rounded bg-teal-900 hover:bg-teal-800 text-sm text-gray-300') %>
          <%= link_to('Edit', edit_device_path(device), class: 'inline-block sm:block p-1 mb-2 rounded bg-teal-300 hover:bg-teal-200 text-sm text-gray-900') %>
          <%= link_to('Events', device_events_path(device), class: 'inline-block sm:block p-1 rounded bg-gray-200 hover:bg-gray-100 text-sm text-gray-900') %>
        </div>
        <div>
          <%= link_to('Delete', device_path(device), method: :delete, data: { confirm: 'Are you sure?'}, class: 'inline-block sm:block p-1 rounded bg-red-300 hover:bg-red-200 text-sm text-gray-900') %>
        </div>
      </div>
    </div>
  <% end %>
</div>
