<% if flash[:notice].present? %>
  <div class='alert alert-info'>
    <%= flash[:notice] %>
  </div>
<% end %>

<div class='row'>
  <div class='col-sm-8 offset-sm-2'>
    <div class='card'>
      <div class='card-header'>
        Devices
        <div class='float-right'>
          <%= link_to('Add device', new_device_path, class: 'btn btn-primary btn-sm') %>
        </div>
      </div>
      <div class='card-body'>
        <table class='table table-striped table-sm table-bordered'>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>UUID</th>
              <th>Last seen at</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
              <tr>
                <td><%= device.id %></td>
                <td><%= device.name %></td>
                <td><%= device.uuid %></td>
                <td><%= device.last_seen_at %></td>
                <td>
                  <%= link_to('Edit', edit_device_path(device), class: 'btn btn-sm btn-secondary') %>
                  <%= link_to('Delete', device_path(device), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger') %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
