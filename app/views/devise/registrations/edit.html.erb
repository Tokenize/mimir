<div class='row'>
  <div class='col-sm-6 offset-sm-3'>
    <div class='card'>
      <div class='card-header'>Edit profile</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class='card-body'>
          <div class='form-group row'>
            <%= f.label :first_name, class: 'col-form-label col-sm-4' %>
            <div class='col-sm-8'>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control form-control-sm' %>
            </div>
          </div>
          <div class='form-group row'>
            <%= f.label :last_name, class: 'col-form-label col-sm-4' %>
            <div class='col-sm-8'>
              <%= f.text_field :last_name, class: 'form-control form-control-sm' %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :email, class: 'col-form-label col-sm-4' %>
            <div class='col-sm-8'>
              <%= f.email_field :email, autocomplete: "email", class: 'form-control form-control-sm' %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group row">
          <%= f.label :password, class: 'col-form-label col-sm-4' %>
          <div class='col-sm-8'>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'new password', class: 'form-control form-control-sm' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, class: 'col-form-label col-sm-4' %>
          <div class='col-sm-8'>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'new password confirmation', class: 'form-control form-control-sm' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :current_password, class: 'col-form-label col-sm-4' %>
          <div class='col-sm-8'>
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control form-control-sm' %>
          </div>
        </div>
      </div>
      <div class='card-footer'>
        <div class="clearfix">
          <%= link_to("Cancel account", registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-sm btn-danger') %>
          <div class='float-right'>
            <%= f.submit "Update", class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
