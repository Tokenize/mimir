<% content_for(:title, "Mimir - Edit Profile") %>

<div class='flex justify-center md:mt-20'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'w-full sm:max-w-lg bg-gray-100 z-10 shadow-md rounded p-8' }) do |f| %>
    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :first_name, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.text_field :first_name, autofocus: true, class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :last_name, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.text_field :last_name, class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :email, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.email_field :email, autocomplete: "email", class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :time_zone, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, class: 'border block rounded w-full appearance-none text-sm text-gray-700' %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='flex items-center mb-3'>
    <div class='w-1/3'>
      <%= f.label :current_password, class: 'block text-sm font-semibold' %>
    </div>
    <div class='w-2/3'>
      <%= f.password_field :current_password, autocomplete: "off", placeholder: 'your current password', class: 'border rounded w-full appearance-none text-sm text-gray-700' %>
    </div>
  </div>


  <div class='flex items-center mb-3'>
    <div class='w-1/3'>
      <%= f.label :password, class: 'block text-sm font-semibold' %>
    </div>
    <div class='w-2/3'>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'new password', class: 'border rounded w-full appearance-none text-sm text-gray-700' %>
    </div>
  </div>

  <div class='flex items-center mb-3'>
    <div class='w-1/3'>
      <%= f.label :password_confirmation, 'Confirmation', class: 'block text-sm font-semibold' %>
    </div>
    <div class='w-2/3'>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'new password confirmation', class: 'border rounded w-full appearance-none text-sm text-gray-700' %>
    </div>
  </div>

  <div class='flex items-center mb-3'>
    <div class='w-1/3'>
      <%= f.label :auth_token, class: 'block text-sm font-semibold' %>
    </div>
    <div class='w-2/3'>
      <%= f.text_field :auth_token, autocomplete: "off", class: 'border rounded w-full appearance-none text-sm text-gray-700', disabled: true %>
    </div>
  </div>

  <div class='pt-4 border-t border-black'>
    <div class='flex justify-between'>
      <%= link_to("Cancel account", registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'button-danger') %>
      <%= f.submit "Update", class: 'button-primary' %>
    </div>
  </div>
<% end %>
</div>
