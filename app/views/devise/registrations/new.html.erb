<div class='flex justify-center md:mt-20'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full sm:max-w-md bg-gray-100 z-10 shadow-md rounded p-8' }) do |f| %>
    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :first_name, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.text_field :first_name, autofocus: true, class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :last_name, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.text_field :last_name, class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :email, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.email_field :email, autocomplete: "email", class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>


    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :password, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'new password', class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :password_confirmation, 'Confirmation', class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'new password confirmation', class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='pt-4 border-t border-black'>
      <div class='flex justify-between'>
        <%= link_to("Log in", new_session_path(resource_name), class: 'block p-1 rounded bg-red-300 hover:bg-red-200 text-sm text-gray-900') %>
        <%= f.submit "Sign up", class: 'block p-1 rounded bg-teal-900 hover:bg-teal-800 text-sm text-gray-300' %>
      </div>
    </div>
  <% end %>
</div>
