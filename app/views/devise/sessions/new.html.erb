<div class='flex justify-center md:mt-20'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-full sm:max-w-md bg-gray-100 z-10 shadow-md rounded p-8' }) do |f| %>
    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
        <%= f.label :email, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'border rounded w-full appearance-none text-gray-700' %>
      </div>
    </div>

    <div class='flex items-center mb-3'>
      <div class='w-1/3'>
      <%= f.label :password, class: 'block text-sm font-semibold' %>
      </div>
      <div class='w-2/3'>
        <%= f.password_field :password, autocomplete: 'off', class: 'border rounded w-full appearance-none text-gray-800' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class='flex items-center mb-3'>
        <div class='w-1/3'></div>
        <div class='w-2/3'>
          <%= f.check_box :remember_me, class: 'inline' %>
          <%= f.label :remember_me, class: 'inline text-sm font-semibold' %>
        </div>
      </div>
    <% end -%>
    <div class='pt-4 border-t border-black'>
      <div class='flex justify-between'>
        <%= link_to('Sign up', new_registration_path(resource_name), class: 'block p-1 rounded bg-teal-300 hover:bg-teal-200 text-sm text-gray-900') %>
        <%= f.submit 'Log in', class: 'block p-1 rounded bg-teal-900 hover:bg-teal-800 text-sm text-gray-300' %>
      </div>
    </div>
  <% end %>
</div>
